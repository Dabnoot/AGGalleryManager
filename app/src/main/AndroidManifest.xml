<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.agcurations.aggallerymanager">

    <application
        android:name=".GlobalClass"
        android:allowBackup="true"
        android:icon="@mipmap/app_book"
        android:installLocation="preferExternal"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_book_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Launcher">
        <activity
            android:name=".VideoPlayerActivityFullScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_video_player_full_screen"
            android:theme="@style/AppTheme.Launcher.Fullscreen" />
        <activity android:name=".CatalogActivity" />
        <activity android:name=".ImportActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AGGallerySettingsActivity"
            android:label="@string/title_activity_a_g_gallery_settings"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ScrollingAboutActivity"
            android:label="@string/title_activity_scrolling_about"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.Launcher.NoActionBar" />
        <activity
            android:name=".PicturesCatalogActivity"
            android:parentActivityName=".MainActivity" /> <!-- https://stackoverflow.com/questions/37437037/android-prevent-white-screen-at-startup ! -->
        <activity
            android:name=".ComicDetailsActivity"
            android:label="@string/title_activity_comic_details"
            android:parentActivityName=".CatalogActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ComicPageViewerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_comic_viewer"
            android:parentActivityName=".ComicDetailsActivity"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".ExportComicsActivity"
            android:parentActivityName=".CatalogActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ImportComicsActivity_obsolete"
            android:parentActivityName=".CatalogActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".VideoPreviewPopup"
            android:theme="@style/AppTheme.VideoPreviewPopup" />

        <service
            android:name=".ImportActivityDataService"
            android:exported="false" />
        <service
            android:name=".MainActivityDataService"
            android:exported="false" />
        <service
            android:name=".ComicDetailsDataService"
            android:exported="false" />
        <service
            android:name=".ExportComicsService"
            android:exported="false" />
        <service
            android:name=".ImportComicsService_obsolete"
            android:exported="false" />
    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>