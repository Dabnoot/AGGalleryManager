<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.agcurations.aggallerymanager">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".GlobalClass"
        android:allowBackup="true"
        android:icon="@mipmap/app_book"
        android:installLocation="preferExternal"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_book_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Launcher">


         <!-- https://stackoverflow.com/questions/37437037/android-prevent-white-screen-at-startup ! -->

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ScrollingAboutActivity"
            android:label="@string/title_activity_scrolling_about"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.Launcher.NoActionBar" />

        <activity android:name=".ComicsCatalogActivity"
            android:parentActivityName=".MainActivity"/>

        <activity
            android:name=".ComicViewerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_comic_viewer"
            android:parentActivityName=".ComicsCatalogActivity"
            android:theme="@style/FullscreenTheme">

        </activity>

        <activity
            android:name=".ExportComicsActivity"
            android:parentActivityName=".ComicsCatalogActivity">
        </activity>

        <activity
            android:name=".ImportComicsActivity"
            android:parentActivityName=".ComicsCatalogActivity">
        </activity>

        <service
            android:name=".ExportComicsService"
            android:exported="false">
        </service>

        <service
            android:name=".ImportComicsService"
            android:exported="false">
        </service>

    </application>


</manifest>