<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ImportActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_ImportConfirmation">

        <TextView
            android:id="@+id/textView_Label_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comfirm Import Details"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/textView_Label_ImportFileList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Files to Import:"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView_Label_Title"/>

        <ListView
            android:id="@+id/listView_FilesToImport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="24sp"
            android:layout_below="@+id/textView_Label_ImportFileList"/>

        <TextView
            android:id="@+id/textView_Label_TagsToApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tags to Apply:"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/listView_FilesToImport"/>

        <TextView
            android:id="@+id/textView_TagsToApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag, tag, tag, tag, tag, tag, tag, tag, tag, tag, tag, tag, tag, tag, tag, tag, tag, tag, tag, tag, tag, tag, tag, tag, tag"
            android:textSize="20sp"
            android:layout_below="@+id/textView_Label_TagsToApply"/>

    </RelativeLayout>



    <Button
        android:id="@+id/button_ImportConfirmation"
        android:layout_width="149dp"
        android:layout_height="67dp"
        android:text="Next"
        android:textSize="24sp"
        app:backgroundTint="@color/colorBlackboardRed"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="buttonNextClick_StorageLocation"/>

</androidx.constraintlayout.widget.ConstraintLayout>