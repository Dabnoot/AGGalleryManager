<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Import">

    <TextView
        android:id="@+id/textView_Label_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import Files"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:id="@+id/linearLayout_Progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView_Label_Title">

        <ProgressBar
            android:id="@+id/progressBar_ImportProgress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progressbar_colors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/textView_ImportProgressBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView_ImportLog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/linearLayout_Progress"
        android:layout_above="@+id/linearLayout_ButtonBar"
        android:scrollbarSize="20dp">
        <TextView
            android:id="@+id/textView_ImportLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"/>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout_ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/button_ImportRestart"
            android:layout_width="149dp"
            android:layout_height="67dp"
            android:layout_marginBottom="10dp"
            android:onClick="buttonClick_ImportRestart"
            android:text="Back"
            android:textSize="24sp"
            android:enabled="false"
            app:backgroundTint="@color/colorButton"
            />

        <Button
            android:id="@+id/button_ImportFinish"
            android:layout_width="149dp"
            android:layout_height="67dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:onClick="buttonNextClick_ImportFinish"
            android:text="Finish"
            android:textSize="24sp"
            android:enabled="false"
            app:backgroundTint="@color/colorButton" />

    </LinearLayout>


</RelativeLayout>