<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity_Import">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textView_WebAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Provide a web address from which to download content:"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText_WebAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/button_PasteAddress"/>

            <Button
                android:id="@+id/button_PasteAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paste"
                android:backgroundTint="@color/colorButton"
                android:enabled="false"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout_ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_Cancel"
                android:layout_width="149dp"
                android:layout_height="67dp"
                android:layout_marginEnd="20dp"
                android:onClick="buttonClick_Cancel"
                android:text="Cancel"
                android:textSize="24sp"
                app:backgroundTint="@color/colorButton" />

            <Button
                android:id="@+id/button_NextStep"
                android:layout_width="149dp"
                android:layout_height="67dp"
                android:onClick="buttonNextClick_WebAddress"
                android:text="Next"
                android:textSize="24sp"
                app:backgroundTint="@color/colorButton"
                android:enabled="true"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>