<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ImportActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Choose Import Method"/>

        <TextView
            android:id="@+id/TextView_AppStorageLocationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="start"
            android:text="This application uses the SD Card for storage if available. The current storage location is: \nPlease choose the import method you would like to use."/>


        <RadioGroup
            android:id="@+id/radioGroup_ImportMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton_MoveFiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Move Files"
                android:textColor="@color/colorGrey1"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:text="This is the recommended import method. The process of moving files will result in only 1 copy of each file. Selected files in the source directory will be deleted after import. Files can be retrieved using the export feature or by manually retrieving from the app storage location."/>

            <RadioButton
                android:id="@+id/radioButton_CopyFiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copy Files"
                android:textColor="@color/colorGrey1"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:text="The process of copying files will result in 2 copies of each file. The originals will be left in the source location. This may result in heavily increased storage use if not copying from an external storage device."/>

        </RadioGroup>

        <Button
            android:id="@+id/button_ImportMethodSelected"
            android:layout_width="149dp"
            android:layout_height="67dp"
            app:backgroundTint="@color/colorBlackboardRed"
            android:text="Next"
            android:textSize="24sp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>