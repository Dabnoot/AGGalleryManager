<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity_Import">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_FolderSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <Button
            android:id="@+id/button_SelectFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBlackboardRed"
            android:text="Select Folder"
            android:textSize="24sp"
            app:backgroundTint="@color/colorBlackboardRed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="buttonNextClick_StorageLocation"/>


        <TextView
            android:id="@+id/textView_Label_Selected_Folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected Folder:"
            android:textSize="24sp"
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_SelectFolder"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView_Selected_Import_Folder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="24sp"
            android:layout_margin="10dp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_Label_Selected_Folder"
            android:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/linearLayout_Progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_Selected_Import_Folder"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/textView_AnalyzingFolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Analyzing folder contents..."
                android:layout_gravity="center_horizontal"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/progressBar_FileAnalysisProgress"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progressbar_colors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textView_FileAnalysisProgressBarText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100/100"
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_Selected_Import_Folder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/button_Cancel"
                android:layout_width="149dp"
                android:layout_height="67dp"
                android:layout_marginEnd="20dp"
                android:onClick="buttonClick_Cancel"
                android:text="Cancel"
                android:textSize="24sp"
                app:backgroundTint="@color/colorBlackboardRed" />

            <Button
                android:id="@+id/button_FolderSelectComplete"
                android:layout_width="149dp"
                android:layout_height="67dp"
                android:text="Next"
                android:textSize="24sp"
                app:backgroundTint="@color/colorBlackboardRed"
                android:onClick="buttonNextClick_StorageLocation"
                android:enabled="false"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView_FileAnalysisDebugLog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout_FolderSelect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="vertical"
        android:scrollbarSize="20dp"
        android:gravity="bottom"
        android:visibility="invisible"/>



</androidx.constraintlayout.widget.ConstraintLayout>