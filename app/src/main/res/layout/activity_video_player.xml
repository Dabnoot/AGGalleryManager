<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:openDrawer="start">

    <RelativeLayout
        android:id="@+id/frameLayout_VideoPlayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_overlay"
        tools:context=".Activity_VideoPlayer">

        <VideoView
            android:id="@+id/videoView_VideoPlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/colorBlack"
            android:layout_gravity="center"
            android:visibility="invisible"/>

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/playerView_ExoVideoPlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/colorBlack"
            android:layout_gravity="center"
            android:visibility="invisible"/>

        <com.google.android.exoplayer2.ui.PlayerControlView
            android:id="@+id/playerControlView_ExoPlayerControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/imageView_GifViewer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/ImageButton_ObfuscationImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ovg_horizon_zero_dawn"
            android:background="@color/colorBlack"
            android:visibility="invisible"
            android:onClick="HideObfuscationImageButton"/>

    </RelativeLayout>

    <!--android:id="@+id/fragment_tag_selector"-->
    <FrameLayout
        android:id="@+id/fragment_Item_Details"
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:clickable="true"
        android:background="@color/design_default_color_error">
    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>