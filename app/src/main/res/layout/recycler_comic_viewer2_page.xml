<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingStart="0dp"
    android:paddingEnd="5dp"><!--Including only paddingEnd to allow vision of scroll bar.-->

    <ImageView
        android:id="@+id/imageView_ComicPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:contentDescription="Comic Page" />

    <ImageButton
        android:id="@+id/imageButton_Edit"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/round_button"
        android:src="@drawable/edit"
        android:layout_margin="50dp"
        android:translationY="-40dp"
        android:translationZ="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />
    <!--TranslationY because this button has a background and MarginBottom has problems
        with that. TranslationZ simply to give a shadow.-->

</RelativeLayout>