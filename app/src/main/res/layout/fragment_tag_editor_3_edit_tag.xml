<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayout_fragment_tag_editor_2_edit_tag"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100"
    android:baselineAligned="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="99">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView_EditTagTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Tag"
                    android:textSize="40sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:id="@+id/textView_EditTagSubText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select a tag from the right and edit tag details below."
                    android:textSize="20sp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView_EditTagTitle"/>

                <TextView
                    android:id="@+id/textView_TagLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:text="Tag ID: "
                    android:textSize="30sp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView_EditTagSubText"/>

                <TextView
                    android:id="@+id/textView_TagID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:text=""
                    android:textSize="30sp"
                    android:layout_below="@+id/textView_EditTagSubText"
                    android:layout_toEndOf="@id/textView_TagLabel"/>

                <TextView
                    android:id="@+id/textView_TagText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:text="Tag text:"
                    android:textSize="30sp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView_TagID"/>

                <EditText
                    android:id="@+id/editText_TagText"
                    android:layout_width="wrap_content"
                    android:minWidth="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="30sp"
                    android:layout_alignBaseline="@+id/textView_TagText"
                    android:layout_toEndOf="@+id/textView_TagText"/>



            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_Apply"
                    android:layout_width="149dp"
                    android:layout_height="67dp"
                    android:layout_marginTop="40dp"
                    android:text="Apply"
                    android:textSize="24sp"
                    app:backgroundTint="@color/colorBlackboardRed"
                    android:enabled="false"/>

                <Button
                    android:id="@+id/button_Finish"
                    android:layout_width="149dp"
                    android:layout_height="67dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:text="Finish"
                    android:textSize="24sp"
                    app:backgroundTint="@color/colorBlackboardRed" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ListView
        android:id="@+id/listView_TagViewer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:scrollbarSize="20dp"
        android:layout_weight="1"/>

</LinearLayout>