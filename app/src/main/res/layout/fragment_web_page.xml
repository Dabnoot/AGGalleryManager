<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_WebPageTab"
    android:background="@color/tab_backcolor_unselected">

    <RelativeLayout
        android:id="@+id/relativeLayout_WebViewNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tab_backcolor_selected">

        <ImageButton
            android:id="@+id/imageButton_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back_icon"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/imageButton_Forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_forward_icon"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/imageButton_Back"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/editText_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/imageButton_ClearText"
            android:layout_toEndOf="@id/imageButton_Forward"
            android:hint="Type web address"
            android:text="www.google.com"
            android:inputType="textWebEmailAddress"
            android:imeOptions="actionGo"/>

        <ImageButton
            android:id="@+id/imageButton_ClearText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/imageButton_ImportContent"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/imageButton_ImportContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/download"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?android:selectableItemBackground"/>


    </RelativeLayout>

    <WebView
        android:id="@+id/webView_tabWebView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout_WebViewNavigation"
        android:layout_alignParentBottom="true"
        android:visibility="visible"/>

</RelativeLayout>