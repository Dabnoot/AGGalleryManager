<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentImport_2_SelectItems">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView_Label_FolderContents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Select import items from folder contents:"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout_ListViewControlBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_Label_FolderContents"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/listView_FolderContents"
            android:gravity="center_vertical"
            android:background="@color/colorFragmentImportBackgroundHighlight">

            <CheckBox
                android:id="@+id/checkBox_SelectAllStorageItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select All"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="40dp"
                android:buttonTint="@color/colorGrey1"
                android:textColor="@color/colorGrey1"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginEnd="40dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@color/colorFragmentImportBackgroundHighlight2"
                >

                <TextView
                    android:id="@+id/textView_labelSortBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Sort by: " />

                <Spinner
                    android:id="@+id/spinner_SortBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"/>

                <ImageView
                    android:id="@+id/imageView_SortOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/baseline_sort_ascending_white_18dp" />

            </LinearLayout>
            <TextView
                android:id="@+id/textView_labelSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Search: " />

            <EditText
                android:id="@+id/editText_Search"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:singleLine="true"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>

        <ListView
            android:id="@+id/listView_FolderContents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constrainedHeight="true"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout_ListViewControlBar"
            app:layout_constraintBottom_toTopOf="@+id/button_ItemSelectComplete"/>

        <Button
            android:id="@+id/button_ItemSelectComplete"
            android:layout_width="149dp"
            android:layout_height="67dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"
            android:background="@color/colorBlackboardRed"
            android:text="Next"
            android:textSize="24sp"
            app:backgroundTint="@color/colorBlackboardRed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>