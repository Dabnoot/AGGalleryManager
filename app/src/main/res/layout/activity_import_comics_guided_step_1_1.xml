<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    <Button
        android:id="@+id/button_SelectFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Folder"
        android:textSize="24sp"
        android:background="@color/colorBlackboardRed"
        app:backgroundTint="@color/colorBlackboardRed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/textView_Label_Selected_Folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Folder:"
        android:textSize="24sp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_SelectFolder"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView_Selected_Import_Folder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:layout_margin="20dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Label_Selected_Folder"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/button_NextStep"
        android:layout_width="149dp"
        android:layout_height="67dp"
        android:text="Next"
        android:textSize="24sp"
        android:background="@color/colorBlackboardRed"
        app:backgroundTint="@color/colorBlackboardRed"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Selected_Import_Folder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

         />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>