<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/frameLayout_VideoPlayer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_overlay"
    android:theme="@style/ThemeOverlay.AGGalleryManager.FullscreenContainer"
    tools:context=".Activity_VideoPlayerFullScreen">

    <VideoView
        android:id="@+id/videoView_VideoPlayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/colorBlack"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/imageView_GifViewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>

    <ImageButton
        android:id="@+id/ImageButton_ObfuscationImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ovg_horizon_zero_dawn"
        android:background="@color/colorBlack"
        android:visibility="invisible"
        android:onClick="HideObfuscationImageButton"/>


</RelativeLayout>