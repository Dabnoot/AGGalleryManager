<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImportActivity">

    <TextView
        android:id="@+id/textView_Label_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import Files"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:id="@+id/relativeLayout_Progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView_Label_Title">

        <ProgressBar
            android:id="@+id/progressBar_ImportProgress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progressbar_colors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:progress="50" />

        <TextView
            android:id="@+id/textView_ImportProgressBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView_ImportLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="top"
        android:scrollbars="vertical"
        android:text="TesTestTestTestTestTestTestTestTestTestTestTestTest"
        android:layout_below="@+id/relativeLayout_Progress"
        android:layout_above="@+id/button_ImportFinish"/>

    <Button
        android:id="@+id/button_ImportFinish"
        android:layout_width="149dp"
        android:layout_height="67dp"
        android:layout_marginBottom="10dp"
        android:onClick="buttonNextClick_ImportFinish"
        android:text="Finish"
        android:textSize="24sp"
        android:enabled="false"
        app:backgroundTint="@color/colorBlackboardRed"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>