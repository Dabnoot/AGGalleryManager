<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_SelectTags"
    android:orientation="vertical"
    android:background="@color/colorActionBar">

    <TextView
        android:id="@+id/textView_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAGS"
        android:layout_margin="20dp"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button_TagEdit"
        android:title="button_edit"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:drawableLeft="@drawable/edit"
        android:layout_alignParentEnd="true"
        style="?android:attr/borderlessButtonStyle"/>


    <Button
        android:id="@+id/button_UncheckTags"
        android:title="tags_uncheck"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:drawableLeft="@drawable/outline_unpublished_white_24"
        style="?android:attr/borderlessButtonStyle"/>

    <!--<co.lujun.androidtagview.TagContainerLayout-->
    <com.agcurations.aggallerymanager.TagContainerLayoutWithID
        android:id="@+id/tagContainerLayout_SuggestedTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:container_enable_drag="false"
        app:horizontal_interval="10dp"
        app:vertical_interval="10dp"
        app:tag_clickable="true"
        app:tag_selectable="true"
        app:tag_enable_cross="true"
        app:tag_cross_area_padding="10dp"
        app:tag_theme="none"
        app:tag_text_color="@color/colorTextColor"
        app:tag_border_color="@color/colorButton"
        app:tag_background_color="@color/colorButton"
        android:layout_below="@+id/button_UncheckTags"/>

    <ListView
        android:id="@+id/listView_ImportTagSelection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:defaultValue="@array/empty_array"
        android:scrollbarSize="20dp"
        android:layout_below="@+id/tagContainerLayout_SuggestedTags"
        />

</RelativeLayout>