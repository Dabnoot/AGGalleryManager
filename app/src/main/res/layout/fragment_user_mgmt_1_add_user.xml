<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100"
    android:baselineAligned="false">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="99">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/textView_AddUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add User"
                    android:textSize="40sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:id="@+id/textView_AddUserSubText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter new user details below."
                    android:textSize="24sp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView_AddUser"/>



                <TextView
                    android:id="@+id/textView_labelUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="User name:"
                    android:textSize="22sp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView_AddUserSubText"/>

                <EditText
                    android:id="@+id/editText_UserName"
                    android:layout_width="wrap_content"
                    android:minWidth="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="22sp"
                    android:layout_alignBaseline="@+id/textView_labelUserName"
                    android:layout_toEndOf="@+id/textView_labelUserName"/>

                <TextView
                    android:id="@+id/textView_labelAccessPinNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:text="Access pin:"
                    android:textSize="22sp"
                    android:layout_toEndOf="@+id/editText_UserName"
                    android:layout_alignBottom="@+id/textView_labelUserName"/>

                <EditText
                    android:id="@+id/editText_AccessPinNumber"
                    android:layout_width="wrap_content"
                    android:minWidth="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="22sp"
                    android:layout_toEndOf="@+id/textView_labelAccessPinNumber"
                    android:layout_alignBaseline="@id/textView_labelAccessPinNumber"/>

                <LinearLayout
                    android:id="@+id/linearLayout_UserColorPicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/editText_AccessPinNumber"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_labelUserIconColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User icon color:"
                        android:layout_gravity="center_vertical"
                        android:textSize="22sp"
                        />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageView_UserIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/login"/>

