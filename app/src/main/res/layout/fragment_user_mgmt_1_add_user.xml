                </LinearLayout>

                <TextView
                    android:id="@+id/textView_labelAgeRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Age rating:"
                    android:textSize="22sp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearLayout_UserColorPicker"/>

                <Spinner
                    android:id="@+id/spinner_AgeRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/textView_labelAgeRating"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_AddUser"
                    android:layout_width="180dp"
                    android:layout_height="67dp"
                    android:text="Add User"
                    android:enabled="false"
                    android:textSize="24sp"
                    app:backgroundTint="@color/colorButton"/>

                <Button
                    android:id="@+id/button_Finish"
                    android:layout_width="180dp"
                    android:layout_height="67dp"
                    android:layout_marginStart="20dp"
                    android:text="Finish"
                    android:textSize="24sp"
                    app:backgroundTint="@color/colorButton" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ListView
        android:id="@+id/listView_ExistingUsers"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:scrollbarSize="20dp"
        android:layout_weight="1"/>

</LinearLayout>