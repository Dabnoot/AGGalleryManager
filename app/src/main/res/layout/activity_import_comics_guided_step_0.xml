<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RadioGroup
        android:id="@+id/radioGroup_ImportMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="321dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButton_ImportComicsFromStorage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Import comics from storage"
            android:textSize="24sp"
            android:textColor="@color/colorGrey1"
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioButton_ImportComicFromWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Import comic from website"
            android:textSize="24sp"
            android:textColor="@color/colorGrey1"
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RadioGroup>

    <Button
        android:id="@+id/button_NextStep"
        android:layout_width="149dp"
        android:layout_height="67dp"
        android:text="Next"
        android:textSize="24sp"
        android:background="@color/colorBlackboardRed"
        app:backgroundTint="@color/colorBlackboardRed"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_ImportMethod" />


</androidx.constraintlayout.widget.ConstraintLayout>