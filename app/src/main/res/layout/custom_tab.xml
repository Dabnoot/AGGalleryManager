<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android= "http://schemas.android.com/apk/res/android"
    android:layout_width= "200dp"
    android:layout_height= "34dp"
    android:background="@drawable/tabitem_bg_selector"
    android:orientation= "horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height= "34dp"
        android:id= "@+id/imageView_WebPageIcon"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:src="@drawable/new_tab_icon"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_toStartOf="@id/imageButton_Close"
        android:layout_toEndOf="@id/imageView_WebPageIcon"
        android:gravity="start"
        android:paddingLeft="7dp"
        android:paddingTop="6dp"
        android:paddingRight="7dp"
        android:paddingBottom="4dp"
        android:singleLine="true"
        android:text="New tab"
        android:textColor="#BBC0C6"
        android:textSize="14dp" />

    <ImageButton
        android:layout_width="32dp"
        android:layout_height= "32dp"
        android:id= "@+id/imageButton_Close"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center"
        android:src="@drawable/close_action"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#00000000"/>

</RelativeLayout>