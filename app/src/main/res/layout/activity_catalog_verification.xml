<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_CatalogVerification">

    <RelativeLayout
        android:id="@+id/relativeLayout_UserControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/textView_TitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Select catalog to scan:"
            android:textColor="@color/colorTextColor"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/spinner_CatalogType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/textView_TitleLabel"
            android:layout_margin="10dp"
            android:layout_toEndOf="@id/textView_TitleLabel"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_AnalysisStartStop"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:layout_alignBaseline="@id/textView_TitleLabel"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/spinner_CatalogType"
            android:text="Start"
            android:textSize="24sp"
            app:backgroundTint="@color/colorButton" />

    </RelativeLayout>


    <ScrollView
        android:id="@+id/scrollView_Log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/relativeLayout_UserControls"
        android:layout_above="@id/linearLayout_Progress"
        android:scrollbarSize="20dp">
        <TextView
            android:id="@+id/textView_Log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextColor"
            android:gravity="bottom"/>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/linearLayout_Progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ProgressBar
            android:id="@+id/progressBar_CatalogVerificationProgress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progressbar_colors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView_CatalogVerificationProgressBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorTextColor"/>
    </RelativeLayout>

</RelativeLayout>