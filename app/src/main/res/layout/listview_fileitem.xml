<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dip">

    <ImageView
        android:id="@+id/imageView_StorageItemIcon"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:contentDescription="Filetype icon"
        android:src="@drawable/baseline_file_white_18dp"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_toEndOf="@id/imageView_StorageItemIcon"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/textView_Line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Line1"
            android:textColor="@color/colorTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_Line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Line2"
            android:textColor="@color/colorTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_Line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Line3"
            android:textColor="@color/colorTextColor"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>