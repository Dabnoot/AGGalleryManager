<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="100"
    android:baselineAligned="false"
    android:background="@color/colorFragmentBackgroundHighlight"
    tools:context=".Fragment_ItemDetails">

    <FrameLayout
        android:id="@+id/child_fragment_tag_selector"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toEndOf="@id/child_fragment_tag_selector"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/textView_labelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Sort and Filter"
            android:textSize="28sp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/textView_labelKeyWords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Filter keywords:"
            android:textSize="20sp"
            android:layout_below="@+id/textView_labelTitle" />

        <EditText
            android:id="@+id/editText_Keywords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/textView_labelKeyWords"
            android:layout_below="@id/textView_labelKeyWords"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView_labelFilterFields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Filter by:"
            android:textSize="20sp"
            android:layout_below="@+id/editText_Keywords"/>

        <RelativeLayout
            android:id="@+id/relativeLayout_SearchFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/textView_labelFilterFields">

            <RelativeLayout
                android:id="@+id/relativeLayout_FilterBy1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/checkBox_FilterTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textColor="@color/colorTextColor"/>

                <CheckBox
                    android:id="@+id/checkBox_FilterArtist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artist"
                    android:padding="0dp"
                    android:layout_below="@+id/checkBox_FilterTitle"
                    android:textColor="@color/colorTextColor"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeLayout_FilterBy2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/relativeLayout_FilterBy1">
                <CheckBox
                    android:id="@+id/checkBox_FilterCharacters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Characters"
                    android:textColor="@color/colorTextColor"/>

                <CheckBox
                    android:id="@+id/checkBox_FilterParodies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parodies"
                    android:padding="0dp"
                    android:layout_below="@+id/checkBox_FilterCharacters"
                    android:textColor="@color/colorTextColor"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeLayout_FilterBy3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/relativeLayout_FilterBy2">
                <CheckBox
                    android:id="@+id/checkBox_FilterWebSource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Web Source"
                    android:textColor="@color/colorTextColor"/>

                <CheckBox
                    android:id="@+id/checkBox_FilterFileNameItemID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filename or Item ID"
                    android:padding="0dp"
                    android:layout_below="@+id/checkBox_FilterWebSource"
                    android:textColor="@color/colorTextColor"/>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout_VideoFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout_SearchFields">

            <TextView
                android:id="@+id/textView_labelVideoResolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Video resolution:"
                android:textSize="20sp"/>

            <Spinner
                android:id="@+id/spinner_VideoResolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/textView_labelVideoResolution"
                android:layout_alignBottom="@+id/textView_labelVideoResolution" />



            <TextView
                android:id="@+id/textView_labelVideoDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@id/textView_labelVideoResolution"
                android:text="Video duration:"
                android:textSize="20sp"/>

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/rangeSlider_VideoDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/textView_labelVideoDuration" />


        </RelativeLayout>


        <TextView
            android:id="@+id/textView_labelTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Tags:"
            android:textSize="20sp"
            android:layout_below="@id/relativeLayout_VideoFilters"/>

        <TextView
            android:id="@+id/textView_Tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:layout_alignTop="@id/textView_labelTags"
            android:layout_toEndOf="@id/textView_labelTags"/>


        <Button
            android:id="@+id/button_Apply"
            android:layout_width="180dp"
            android:layout_height="67dp"
            android:text="Apply"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:backgroundTint="@color/colorButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:enabled="false"/>

    </RelativeLayout>

</RelativeLayout>