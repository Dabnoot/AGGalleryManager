<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="100"
    android:baselineAligned="false"
    android:background="@color/colorFragmentBackgroundHighlight"
    tools:context=".Fragment_ItemDetails">

    <FrameLayout
        android:id="@+id/child_fragment_tag_selector"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toEndOf="@id/child_fragment_tag_selector"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/textView_labelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Sort and Filter"
            android:textSize="24sp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView_labelSortBy"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Sort by:"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:layout_below="@+id/textView_labelTitle" />


        <Spinner
            android:id="@+id/spinner_SortBy"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@id/textView_labelSortBy"
            android:layout_alignBottom="@id/textView_labelSortBy"/>

        <ImageButton
            android:id="@+id/imageButton_SortOrder"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/colorFragmentBackgroundHighlight"
            android:src="@drawable/baseline_sort_ascending_white_18dp"
            android:title="sort_order" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/colorTextColor"
            android:layout_below="@id/imageButton_SortOrder"/>


        <TextView
            android:id="@+id/textView_labelKeyWords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Filter keywords:"
            android:textSize="20sp"
            android:layout_below="@+id/textView_labelSortBy" />

        <EditText
            android:id="@+id/editText_Keywords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/textView_labelKeyWords"
            android:layout_below="@id/textView_labelKeyWords"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView_labelFilterFields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Filter by:"
            android:textSize="20sp"
            android:layout_below="@+id/editText_Keywords"/>

        <LinearLayout
            android:id="@+id/linearLayout_SearchFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/textView_labelFilterFields">

            <LinearLayout
                android:id="@+id/linearLayout_FilterBy1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBox_FilterTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Title"
                    android:textColor="@color/colorTextColor"/>

                <CheckBox
                    android:id="@+id/checkBox_FilterArtist"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Artist"
                    android:padding="0dp"
                    android:textColor="@color/colorTextColor"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_FilterBy2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBox_FilterCharacters"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Characters"
                    android:textColor="@color/colorTextColor"/>

                <CheckBox
                    android:id="@+id/checkBox_FilterParodies"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Parodies"
                    android:textColor="@color/colorTextColor"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_FilterBy3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBox_FilterWebSource"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Web Source"
                    android:textColor="@color/colorTextColor"/>

                <CheckBox
                    android:id="@+id/checkBox_FilterFolderSource"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Folder Source"
                    android:textColor="@color/colorTextColor"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/colorTextColor"
            android:layout_below="@id/linearLayout_SearchFields"/>

        <RelativeLayout
            android:id="@+id/relativeLayout_VideoFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout_SearchFields">

            <TextView
                android:id="@+id/textView_labelResolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Resolution:"
                android:textSize="20sp"/>

            <Spinner
                android:id="@+id/spinner_Resolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/textView_labelResolution"
                android:layout_alignBottom="@+id/textView_labelResolution" />

            <TextView
                android:id="@+id/textView_labelVideoDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@id/textView_labelResolution"
                android:text="Video duration:"
                android:textSize="20sp"/>

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/rangeSlider_VideoDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/textView_labelVideoDuration" />


        </RelativeLayout>


        <TextView
            android:id="@+id/textView_labelTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Tags:"
            android:textSize="20sp"
            android:layout_below="@id/relativeLayout_VideoFilters"/>

        <TextView
            android:id="@+id/textView_Tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:layout_alignTop="@id/textView_labelTags"
            android:layout_toEndOf="@id/textView_labelTags"/>


        <Button
            android:id="@+id/button_Apply"
            android:layout_width="180dp"
            android:layout_height="67dp"
            android:text="Apply"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:backgroundTint="@color/colorButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:enabled="false"/>

    </RelativeLayout>

</RelativeLayout>