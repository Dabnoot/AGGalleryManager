<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">

        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorPrimaryDark">@color/colorStatusBarPurple</item>    <!-- Status bar color -->
        <item name="colorPrimary">@color/colorActionBarPurple</item>        <!-- Action bar color -->

        <item name="android:windowBackground">@color/colorBackgroundPurple</item>
        <item name="android:navigationBarColor">@color/colorNavigationBarPurple</item>
        <item name="android:textColor">@color/colorGrey1</item>
        <item name="android:textColorPrimary">@color/colorGrey1</item>         <!-- sets AlertDialog summaryText color -->
        <item name="android:textColorSecondary">@color/colorGrey1</item>
        <!--<item name="colorBackgroundFloating">@color/colorLightOrange</item>    &lt;!&ndash; Sets AlertDialog color &ndash;&gt;-->
        <item name="textColorAlertDialogListItem">@color/colorGrey1</item>     <!-- Sets AlertDialog text color -->
        <item name="android:editTextColor">@color/colorGrey1</item>

        <item name="subtitleTextColor">@color/colorGrey1</item>
        <item name="editTextColor">@color/colorGrey1</item>
        <item name="actionMenuTextColor">@color/colorGrey1</item>
        <item name="badgeTextColor">@color/colorGrey1</item>
        <item name="counterOverflowTextColor">@color/colorGrey1</item>
        <item name="counterTextColor">@color/colorGrey1</item>
        <item name="errorTextColor">@color/colorGrey1</item>
        <item name="itemTextColor">@color/colorGrey1</item>
        <item name="hintTextColor">@color/colorGrey1</item>
        <item name="placeholderTextColor">@color/colorGrey1</item>
        <item name="prefixTextColor">@color/colorGrey1</item>
        <item name="suffixTextColor">@color/colorGrey1</item>
        <item name="tabTextColor">@color/colorGrey1</item>
        <item name="titleTextColor">@color/colorGrey1</item>
        <item name="actionTextColorAlpha">@color/colorGrey1</item>
        <item name="helperTextTextColor">@color/colorGrey1</item>

        <item name="colorSurface">@color/colorNavigationBarPurple</item> <!-- Background of menu, as well as multiSelect preference popup.-->

        <item name="actionBarStyle">@style/ActionBarTheme</item>            <!-- Sets the popup menu color -->
    </style>


    <style name="MainTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/sora_sagano_unsplash</item>
    </style>

    <style name="ActionBarTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="popupTheme">@style/ActionBarPopupTheme</item>
    </style>

    <!-- Popup menu theme -->
    <style name="ActionBarPopupTheme">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorPopupPurple</item>
    </style>


    <!-- Starting activity theme -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/startup_screen</item>
    </style>

    <style name="AppTheme.Launcher.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorBlueGrey3</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme.Launcher">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="BusyBackgroundOverlayText"> <!-- This is for putting a shadow behind text. -->
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">3</item>
    </style>


    <style name="AppTheme.PinCodePopup">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@color/colorBlack</item>
    </style>


    <style name="AlertDialogCustomStyle" parent="@style/Theme.AppCompat.DayNight.Dialog">
        <item name="android:textColor">@color/colorGrey3</item>
        <item name="android:textColorPrimary">@color/colorGrey3</item>
        <item name="android:background">@color/colorBlack</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarStyleCustom</item>
    </style>

    <style name="ButtonBarStyleCustom" parent="@style/Theme.AppCompat.DayNight.Dialog">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <!--        <item name="android:background">?android:attr/selectableItemBackground</item> Hide the button edges. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center</item> <!-- Affects the text position in the button -->
        <item name="android:layout_marginStart">15dp</item>
        <item name="backgroundTint">@color/colorBlackboardRed</item>
    </style>



</resources>