<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorPrimaryDark">@color/colorStatusBar</item>    <!-- Status bar color -->
        <item name="colorPrimary">@color/colorActionBar</item>        <!-- Action bar color -->

        <item name="background">@color/colorBackgroundMain</item>
        <item name="android:windowBackground">@color/colorBackgroundMain</item>
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>
        <!--<item name="android:textColor">@color/colorTextColor</item>-->                 <!--Don't set all of the text color as the WebView ContextMenu Colors are VERY had to identify and change.-->
        <item name="android:textColorPrimary">@color/colorTextColor
        </item>          <!-- sets AlertDialog summaryText color -->
        <item name="android:textColorSecondary">@color/colorTextColor</item>
        <!--<item name="colorBackgroundFloating">@color/colorButton</item>-->       <!-- Sets AlertDialog color -->
        <item name="textColorAlertDialogListItem">@color/colorTextColor
        </item>      <!-- Sets AlertDialog text color -->
        <item name="android:editTextColor">@color/colorTextColor</item>

        <item name="subtitleTextColor">@color/colorTextColor</item>
        <item name="editTextColor">@color/colorTextColor</item>
        <item name="actionMenuTextColor">@color/colorTextColor</item>
        <item name="badgeTextColor">@color/colorTextColor</item>
        <item name="counterOverflowTextColor">@color/colorTextColor</item>
        <item name="counterTextColor">@color/colorTextColor</item>
        <item name="errorTextColor">@color/colorTextColor</item>
        <item name="itemTextColor">@color/colorTextColor</item>
        <item name="hintTextColor">@color/colorTextColor</item>
        <item name="placeholderTextColor">@color/colorTextColor</item>
        <item name="prefixTextColor">@color/colorTextColor</item>
        <item name="suffixTextColor">@color/colorTextColor</item>
        <item name="tabTextColor">@color/colorTextColor</item>
        <item name="titleTextColor">@color/colorTextColor</item>
        <item name="actionTextColorAlpha">@color/colorTextColor</item>
        <item name="helperTextTextColor">@color/colorTextColor</item>

        <item name="colorSurface">@color/colorNavigationBar
        </item> <!-- Background of menu, as well as multiSelect preference popup.-->


        <!--For the spinner style, specifically for item dividers-->
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>

        <item name="android:colorSecondary">@color/md_indigo_800</item>

    </style>

    <style name="custom_optionsMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/colorBlack</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/sora_sagano_unsplash</item>
    </style>

    <!-- Starting activity theme -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/startup_screen</item>
    </style>

    <style name="BusyBackgroundOverlayText"> <!-- This is for putting a shadow behind text. -->
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:textColor">@color/colorTextColor</item>
    </style>


    <style name="AppTheme.PinCodePopup">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@color/colorBlack</item>
    </style>


    <style name="AlertDialogCustomStyle" parent="@style/Theme.AppCompat.DayNight.Dialog">
        <item name="android:textColor">@color/colorTextColor</item>
        <item name="android:textColorPrimary">@color/colorTextColor</item>
        <item name="android:background">@color/colorBlack</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarStyleCustom</item>
    </style>

    <style name="ButtonBarStyleCustom" parent="@style/Theme.AppCompat.DayNight.Dialog">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <!--        <item name="android:background">?android:attr/selectableItemBackground</item> Hide the button edges. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center</item> <!-- Affects the text position in the button -->
        <item name="android:layout_marginStart">15dp</item>
        <item name="backgroundTint">@color/colorButton</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tabitem_bg_selector</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/tab_textcolor</item>
    </style>

    <!--For spinner item dividers:-->
    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#d1d1d1</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <!--https://proandroiddev.com/problems-with-material-range-slider-in-android-15bb4406f774-->
        <!-- color used by the text in the Tooltip -->
        <item name="colorOnPrimary">@color/md_grey_250
        </item>       <!-- Sets RangeSlider hint label text color-->
        <item name="colorOnBackground">@color/md_grey_900
        </item>    <!-- Sets RangeSlider hint label background color-->
        <item name="colorSurface">@color/md_purple_200</item>
    </style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


</resources>