<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:bottom="-30dp"  android:top="10dp"
        android:left="2dp" android:right="50dp" >
        <rotate android:fromDegrees="15">
            <shape android:shape="rectangle">
                <solid android:color="@color/tab_backcolor_selected" />
                <corners
                    android:topLeftRadius="10dp"
                    android:topRightRadius="10dp">
                </corners>
            </shape>
        </rotate>
    </item>

    <item android:bottom="-30dp"  android:top="10dp"
        android:left="50dp" android:right="2dp" >
        <rotate android:fromDegrees="-15">
            <shape android:shape="rectangle">
                <solid android:color="@color/tab_backcolor_selected" />
                <corners
                    android:topLeftRadius="10dp"
                    android:topRightRadius="10dp">
                </corners>
            </shape>
        </rotate>
    </item>

    <item android:bottom="0dp"  android:top="0dp"
        android:left="23dp" android:right="23dp" >
        <shape android:shape="rectangle">
            <solid android:color="@color/tab_backcolor_selected" />
        </shape>
    </item>


</layer-list>