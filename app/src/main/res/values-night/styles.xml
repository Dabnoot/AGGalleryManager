    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorAccent">@color/md_red_A300</item>

        <item name="colorPrimaryDark">@color/md_red_1100</item>    <!-- Status bar color -->
        <item name="colorPrimary">@color/md_red_1000</item>        <!-- Action bar color -->
        <item name="colorOnPrimary">@color/md_grey_250</item>       <!-- Sets RangeSlider hint label text color-->
        <item name="colorOnBackground">@color/md_grey_900</item>    <!-- Sets RangeSlider hint label background color-->

        <item name="android:navigationBarColor">@color/md_red_1000</item>

        <item name="background">@color/colorBackgroundMain</item>
        <item name="android:editTextColor">@color/md_grey_250</item>

        <item name="colorSurface">@color/md_red_1000</item>         <!-- Background of ActionBar, Menu, MultiSelect preference popup.-->
        <item name="colorOnSurface">@color/md_grey_250</item>

        <item name="colorSecondary">@color/md_red_850</item>


        <!--For the spinner style, specifically for item dividers-->
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/wp3651583_red_glitter_wallpaper</item>
    </style>

