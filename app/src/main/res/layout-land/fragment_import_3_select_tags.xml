<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ImportActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:id="@+id/TagSelectionTopText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/linearLayout_TagsBorder">
            <!--            "@+id/linearLayout_TagsBorder"-->

            <TextView
                android:id="@+id/textView_Label_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:text="Tag Selection"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView_Label_Subtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textView_Label_Title"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Choose tags applicable to the selection from the scrollbox to the right.\n\nA new tag can be added from the main menu.\n\nAdditional tags can be added or removed from individual files when the import is completed.\n\nEach tag has an ID number. Files will be imported into a storage folder which will be identified by the FIRST tag selected. The tag ID number is used as the folder name to preserve content anonymity."
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView_LabelImportTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_Label_Subtext"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:text="Tags:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView_ImportTags"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:layout_below="@+id/textView_LabelImportTags"
                android:text=""/>

            <Button
                android:id="@+id/button_NextStep"
                android:layout_width="149dp"
                android:layout_height="67dp"
                android:background="@color/colorBlackboardRed"
                android:text="Next"
                android:textSize="24sp"
                android:onClick="buttonNextClick_TagSelectComplete"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                app:backgroundTint="@color/colorBlackboardRed" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout_TagsBorder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_alignParentEnd="true"
            android:background="@color/black_overlay"
            android:padding="2dp">

            <ListView
                android:id="@+id/listView_ImportTagSelection"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:defaultValue="@array/empty_array"
                android:scrollbarSize="20dp" />
        </LinearLayout>
    </RelativeLayout>







</androidx.constraintlayout.widget.ConstraintLayout>